    "clean": "rm -rf dist"
  },
  "keywords": [
    "ink",
    "react",
    "cli",
    "terminal",
    "tui",
    "scroll",
    "scrollable",
    "container"
  ],
  "author": "Simon Neo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonNeo/inks.git",
    "directory": "packages/ink-scroll-box"
  },
  "bugs": {
    "url": "https://github.com/simonNeo/inks/issues"
  },
  "homepage": "https://github.com/simonNeo/inks#readme",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "ink-hooks": "workspace:*"
  },
  "peerDependencies": {
    "ink": "^6.5.1",
